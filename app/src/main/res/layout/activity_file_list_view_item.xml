<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/default_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/default_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:id="@+id/activity_file_list_view_item_file_name"
            android:text="@string/fragment_category_list_view_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:id="@+id/activity_file_list_view_item_num_category"
            android:text="@string/fragment_category_list_view_quantity"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"/>

        <com.jby.stocktake.others.SquareHeightLinearLayout
            android:layout_width="match_parent"
            android:id="@+id/activity_file_list_view_item_sync"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/activity_file_sync_icon"/>

        </com.jby.stocktake.others.SquareHeightLinearLayout>

        <com.jby.stocktake.others.SquareHeightLinearLayout
            android:layout_width="match_parent"
            android:id="@+id/activity_file_list_view_item_export"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/activity_file_share_icon"/>

        </com.jby.stocktake.others.SquareHeightLinearLayout>

    </LinearLayout>

</LinearLayout>

