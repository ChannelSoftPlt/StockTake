<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jby.stocktake.home.HomeActivity">

    <include
        layout="@layout/activity_home_actionbar"
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_home_import"
                android:scaleType="fitXY"
                android:src="@drawable/import_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/activity_home_label_import"
                android:fontFamily="@string/font_family_condensed"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_home_export"
                android:scaleType="fitXY"
                android:src="@drawable/export_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/activity_home_label_export"
                android:textColor="#fff"
                android:gravity="center"
                android:fontFamily="@string/font_family_condensed"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
