<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="@color/transparent_black"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#f1f1f1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@string/font_family_condensed"
                android:text="@string/fragment_sub_category_update_dialog_label_item_in"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#564141"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_condensed"
                    android:id="@+id/fragment_sub_category_update_dialog_label_category"
                    android:text="@string/fragment_sub_category_update_dialog_label_category"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/fragment_sub_category_update_dialog_category"
                    android:hint="-"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#564141"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_condensed"
                    android:id="@+id/fragment_sub_category_update_dialog_label_item_code"
                    android:text="@string/fragment_sub_category_update_dialog_label_item_code"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/fragment_sub_category_update_dialog_item_code"
                    android:hint="@string/fragment_sub_category_insert_dialog_hint_barcode"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#564141"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_condensed"
                    android:id="@+id/fragment_sub_category_update_dialog_label_barcode"
                    android:text="@string/fragment_sub_category_update_dialog_label_barcode"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/fragment_sub_category_update_dialog_barcode"
                    android:hint="@string/fragment_sub_category_insert_dialog_hint_barcode"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#564141"
                android:textStyle="bold"
                android:id="@+id/fragment_sub_category_update_dialog_label_quantity"
                android:fontFamily="@string/font_family_condensed"
                android:text="@string/fragment_sub_category_update_dialog_label_quantity"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="@string/fragment_sub_category_insert_dialog_default_quantity"
                android:inputType="phone"
                android:id="@+id/fragment_sub_category_update_dialog_quantity"
                android:hint="@string/fragment_sub_category_insert_dialog_hint_quantity"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_system_quantity"
                    android:fontFamily="@string/font_family_condensed"
                    android:text="@string/fragment_sub_category_update_dialog_label_system_quantity"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_system_quantity_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#564141"
                android:textStyle="bold"
                android:id="@+id/fragment_sub_category_update_dialog_description"
                android:text="@string/fragment_sub_category_update_dialog_label_description"
                android:fontFamily="@string/font_family_condensed"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#564141"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:fontFamily="@string/font_family_condensed"
                android:id="@+id/fragment_sub_category_update_dialog_description_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_label_selling_price"
                    android:text="@string/fragment_sub_category_update_dialog_label_selling_price"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_selling_price"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_label_cost_price"
                    android:text="@string/fragment_sub_category_update_dialog_label_cost_price"
                    android:textStyle="bold"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_cost_price"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#564141"
                    android:textStyle="bold"
                    android:id="@+id/fragment_sub_category_update_dialog_label_date"
                    android:text="@string/fragment_sub_category_update_dialog_label_date"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#564141"
                    android:id="@+id/fragment_sub_category_update_dialog_date"
                    android:fontFamily="@string/font_family_condensed"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#80000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="?actionBarSize">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1"
                        android:textColor="#80000000"
                        android:id="@+id/fragment_category_update_dialog_button_cancel"
                        android:text="@string/fragment_category_insert_dialog_cancel"
                        android:layout_weight="1"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#80000000"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1"
                        android:id="@+id/fragment_category_update_dialog_button_update"
                        android:text="@string/fragment_category_insert_dialog_ok"
                        android:textColor="@color/tifanny_blue"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

